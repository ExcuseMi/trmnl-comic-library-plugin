<style>
  #comic {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: contain;
    object-position: center;
    {% if trmnl.plugin_settings.custom_fields_values.image_filter != "none" %}
    filter: {{trmnl.plugin_settings.custom_fields_values.image_filter}};
    {% endif %}
  }
</style>
<div class="layout layout--col layout--stretch layout--center-y layout--center">
  {%- if comic.imageUrl -%}
    <img id="comic" src="{{ comic.imageUrl }}" class="image image-dither layout--center" />
  {%- else -%}
    <div class="label layout--center">Could not find any comics.</div>
  {%- endif -%}
</div>
<div class="title_bar">
  <span class="title">{{ comic.title }}</span>
</div>